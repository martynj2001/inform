

<h2 class="subtitle">InForm submitted at: <%= @in_forms.created_at %></h2>

<h4 class="subtitle">Submitted by: <span class='output_text'><%= @in_forms.num %> <%= @in_forms.rank %> <%= @in_forms.name %></span></h4>

<h4 class="subtitle">Sub-Unit: <span class='output_text'><%= @in_forms.pl %></span></h4>

<hr></hr>

<h4 class="subtitle">InForm Description:</h4><p><%= @in_forms.body %></p>

<hr></hr>

<h4 class='subtitle'>Response/Update (<%=@in_forms.comments.size%>):</h4>
<%= render partial: 'in_forms/comment', collection: @in_forms.comments %>
<% if can? :manage, @in_forms %>
  <hr></hr>
  <%= render partial: 'comments/form' %>
<% end %>
<hr></hr>

<div class="row">
  <div class="col-xs-12 col-md-2 footer"><%= link_to "Back to List", in_forms_path, class: " btn btn-default btn_text"%></div>
  <div class="col-xs-12 col-md-2 footer"><%= link_to "Edit InForm", edit_in_form_path(@in_forms), class: "btn btn-default btn_text" %></div>
  <% if can? :manage, @in_forms %>
    <div class="col-xs-12 col-md-2 footer"><%= link_to "Delete InForm", in_form_path(@in_forms), method: :delete, class: "btn btn-default btn_text", data: {confirm: "Are you sure you want to delete this Inform?"} %></div>
  <% end %>
  <div class="col-md-2"></div>
  <div class="col-md-2"></div>
  <div class="col-md-2"></div>
</div>

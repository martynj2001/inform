<h4 class='subtitle'>Post a  Response:</h4>

<%= form_for [@in_forms, @comment], :html => {:class => "form-horizontal center"} do |f| %>
  <div id='comments_form' class='form-group'>
    <div class='row'>
      <p class='col-xs-12 col-md-4'>
        <%= f.label :author %>
        <%= f.text_field :author_name, class: 'form-control', placeholder: 'Role, Name & Rank'%>
      </p>
      <p class='col-xs-12 col-md-8'>
        <%= f.label :response %>
        <%= f.text_area :body, class: 'form-control' %>
      </p>
    </div>
    <%= f.submit class: 'btn btn-default btn_text'%>
  </div>
<% end %>
